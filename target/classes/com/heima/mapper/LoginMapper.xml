<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heima.mapper.LoginMapper">

    <!--    实施登录-->
    <select id="loginImplementuser" resultType="com.heima.pojo.User">
        select *
        from users
        where username = #{username}
          and password = #{password}
    </select>

    <!--    任务登录-->
    <select id="loginTask" resultType="com.heima.pojo.User">
        select *
        from users
        where username = #{username}
          and password = #{password}
    </select>

    <!--    资源登录-->
    <select id="loginResource" resultType="com.heima.pojo.User">
        select *
        from users
        where username = #{username}
          and password = #{password}
    </select>

</mapper>